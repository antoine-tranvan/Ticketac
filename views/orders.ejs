<!DOCTYPE html>
<html>
  <head>
    <title>Orders</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <!-- HEADER -->
    <nav class="banner">
      <div>
        <a href="/homepage"><img src="/images/train.png" /><span class="ticketac">Ticketac</span></a>
      </div>
      <div>
        <span class="hyperlien"><span>&#129312;</span> Hello <%=name%> !</span>
        <a href="/lasttrip"><span class="hyperlien">My last trips</span></a>
        <a href="/logout"><span class="hyperlien">Déconnexion</span></a>
      </div>
    </nav>

    <!-- body -->
    <div
      class="corps d-flex flex-column justify-content-start align-items-center"
    >
      <div class="row col-8">
        <div class="text-center mt-20">
          <h4 class="titleForm">My tickets :</h4>
        </div>

        <div
          class="bandeau2 text-center mt-20 d-flex flex-column justify-content-start align-items-start"
        >
          <table class="table">
            <thead>
              <tr>
                <th scope="col">N°</th>
                <th scope="col">Journey</th>
                <th scope="col">Date</th>
                <th scope="col">Departure time</th>
                <th scope="col">Price</th>
              </tr>
            </thead>
            <tbody>
                <% for (var i=0; i<orders.length;i++) {%>
                  <% var date = orders[i].departureTime.split(':')
                  var AMPM = "AM"
                  date[0]= Number(date[0])
                  if(date[0] >= 12) {AMPM="PM"}
                   %> 
                    <tr>
                        <th scope="row"><%=i+1%></th>
                        <td><%=orders[i].departure%> / <%=orders[i].arrival%></td>
                        <td><%=orders[i].date%></td>
                        <td><%=orders[i].departureTime%> <%=AMPM%></td>
                        <td><%=orders[i].price%>€</td>
                        <td><a href="/delete-line?position=<%=i%>"><button type="button" class="btn btn-outline-info"><i class="far fa-trash-alt"></i></button></a></td>
                    </tr>
                <%}%>
                <tr class="table-info">
                    <th>Total</td> 
                        <th></td> 
                            <th></td>
                                <th></td>
                    <td><%=totalAmount%> €</td> 
                </tr>
                
            </tbody>
          </table>
          
          <div class="button align-self-end"><button type="submit" class="btn btn-danger mt-2 w-20" data-bs-toggle="modal" data-bs-target="#exampleModal">Confirm</button></div>

          <%-include('popup');%>




        </div>

      </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
